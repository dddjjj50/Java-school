package kyoyu;

public class Day2_4_3 {

	public static void main(String[] args) {
		
		for(int i=65;i<=90;i++) {
			for(int k=0;k<=(i-64);k++) {
				System.out.printf("%c",i);
			}
			System.out.println();
		}

	}

}

