package kyoyu;

public class Day2_4_4 {

	public static void main(String[] args) {
		
		for(int i=65;i<=90;i++) {			
			for(int j=65;j<=i;j++) {
				
					System.out.printf("%c",j);
				
			}
			System.out.println();
		}

	}

}

