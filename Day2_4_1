package kyoyu;

public class Day2_4_1 {

	public static void main(String[] args) {
		int a,b;
		for(a=1;a<=9;a++) {
			System.out.printf("%dの段  ",a);
			for(b=1;b<=9;b++) {
				System.out.printf("%3d",a*b);
			}
			System.out.println();
		}

	}

}

/*九九表を書き出してください。

＜＜実行例＞＞
1の段	  1  2  3  4  5  6  7  8  9
2の段	  2  4  6  8 10 12 14 16 18
3の段	  3  6  9 12 15 18 21 24 27
 :
 :
9の段	  9 18 27 36 45 54 63 72 81*/
