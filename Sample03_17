package chap03;

public class Sample03_17 {

	public static void main(String[] args) {
		int ran;
		
		for(int i=0;i<=9;i++) {
			ran=(int)(Math.random()*10)+1;
			if(ran%2==0) {
				System.out.printf("%d回目：%dは2で割り切れます\n",i+1,ran);
				System.out.println("2で割り切れたので終了");
				break;
			}else {
				System.out.printf("%d回目：%dは2で割り切れません\n",i+1,ran);
			}
		}

	}

}
